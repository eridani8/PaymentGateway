<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PaymentGateway.PhoneApp.ViewModels"
             x:Class="PaymentGateway.PhoneApp.Pages.DeviceIdPage"
             x:DataType="viewmodels:DeviceIdViewModel"
             Title="Привязка устройства">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <Label
                Text="Код для привязки устройства"
                FontSize="22"
                HorizontalOptions="Center" />
            <Border>
                <StackLayout Orientation="Horizontal">
                    <Label
                        Text="{Binding DeviceId}"
                        FontSize="14"
                        HorizontalOptions="Center"
                        TextColor="{StaticResource White}" />
                </StackLayout>
            </Border>
            <Button Command="{Binding CopyToClipboardCommand}" Text="Копировать" Style="{StaticResource OutlinedButtonStyle}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>