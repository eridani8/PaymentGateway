<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@((MarkupString)ContentText)</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="CancelColor" OnClick="@(Cancel)">@CancelText</MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="@(Submit)">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public required IMudDialogInstance MudDialog { get; set; }
    
    [Parameter] public string Title { get; set; } = "Подтверждение";
    [Parameter] public string ContentText { get; set; } = "Вы уверены, что хотите продолжить?";
    [Parameter] public string ButtonText { get; set; } = "Подтвердить";
    [Parameter] public string CancelText { get; set; } = "Отмена";
    [Parameter] public Color Color { get; set; } = Color.Error;
    [Parameter] public Color CancelColor { get; set; } = Color.Secondary;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
} 