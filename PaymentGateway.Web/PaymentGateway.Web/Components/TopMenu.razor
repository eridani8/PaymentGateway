@inject CustomAuthStateProvider AuthStateProvider
@inject NavigationManager NavigationManager

<Bar Breakpoint="Breakpoint.Desktop" Background="Background.Primary" ThemeContrast="ThemeContrast.Dark">
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon Margin="Margin.Is2.FromEnd" IconName="IconName.MoneyBillAlt"/>
                PaymentGateway
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarToggler/>
    <BarMenu>
        <BarStart>
            <BarItem>
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <BarLink To="/UserManagement">Пользователи</BarLink>
                    </Authorized>
                </AuthorizeView>
            </BarItem>
        </BarStart>
        <BarEnd Margin="Margin.Is3.FromEnd">
            <BarMenu>
                <AuthorizeView>
                    <Authorized>
                        <BarItem>
                            <BarDropdown RightAligned>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.User"/>
                                    @context.User.Identity?.Name
                                </BarDropdownToggle>
                                <BarDropdownMenu RightAligned>
                                    <BarDropdownItem To="/settings">Настройки</BarDropdownItem>
                                    <BarDropdownDivider />
                                    <BarDropdownItem Clicked="@LogoutAsync">Выйти</BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                    </Authorized>
                    <NotAuthorized>
                        <BarItem>
                            <BarLink To="/login">
                                <BarIcon IconName="IconName.User"/>
                                Войти
                            </BarLink>
                        </BarItem>
                    </NotAuthorized>
                </AuthorizeView>
            </BarMenu>
        </BarEnd>
    </BarMenu>
</Bar>

@code {

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    private async Task LogoutAsync(MouseEventArgs arg)
    {
        await AuthStateProvider.MarkUserAsLoggedOut();

        NavigationManager.NavigateTo("/login");
    }

}